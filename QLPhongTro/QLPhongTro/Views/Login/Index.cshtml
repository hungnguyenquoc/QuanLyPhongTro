@model QLPhongTro.Models.DAO.login

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@Html.ActionLink("trang chu","Index","Home",new { @area = ""},new { @class = "btn btn-success"})
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h2>Login</h2>
            <form id="login-form">
                <div class="form-group">
                    @Html.Label("Username:")
                    @Html.TextBoxFor(Model => Model.userName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(Model => Model.userName, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.Label("Password")
                    @Html.PasswordFor(Model => Model.passWord, new { @class = "form-control" })
                    @Html.ValidationMessageFor(Model => Model.passWord, "", new { @class = "text-danger" })
                </div>

                <a class="btn btn-primary" onclick="Login()">Login</a>
            </form>
        </div>
    </div>
</div>
<script>
    var Login = function () {
        var data = $("#login-form").serialize();
        if (!$("#login-form").valid()) {
            return false;
        }
        $.ajax({
            type: "Post",
            url: "/Login/Login",
            data: data,
            success: function (check) {
                if (check == "0")
                    window.location.href = "/Admin";
                else if (check == "1")
                    window.location.href = "/BossHostel";
                else if (check == "2") {
                    window.location.href = "/TVNguoiDung";
                }
                else {
                    alert("Sai cmnr");
                }
            }
        })
    }
</script>
